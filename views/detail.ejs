<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>Detail Contact</h1>
            <% if (!id) { %>
                <div class="alert alert-danger"  role="alert">
                    Data Contact Tidak Ada <br> <a href="/contact" class="alert-link">&laquo; Kembali Ke Halaman Daftar Contact</a>.
                  </div>
                
             <% } else { %>
              <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%- id.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%- id.noHP %></h6> 
                  <p class="card-text"><%- id.email %></p>
                  <a href="/contact/edit/<%- id.id %>" class="btn btn-info bagde" onclick="confirm('yakin ?')">Edit</a>
                  <a href="/contact/delete/<%- id.id %>" class="btn btn-danger bagde" onclick="confirm('yakin ?')">Delete</a>
                  <a href="/contact" class="card-link d-block mt-5">&laquo; Kembali Ke Halaman Daftar Contact</a>
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>

  