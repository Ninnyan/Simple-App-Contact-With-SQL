<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4">Daftar Contact</h1>
            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                <%- msg %>
              </div>
            <% } %>
             <% if (contacts.length === 0) { %>
              <div class="alert alert-danger"  role="alert">
                <strong>Data Contact Tidak Ada !!!</strong> <br> <br> <a href="/contact/add" class="btn btn-primary mb-2"><i class="bi bi-plus-circle-fill">  Tambahkan Data</i> </a>  Jika Ingin Menambahkan Data
              </div>
             <% }  else { %>
              <a href="/contact/add" class="btn btn-primary mb-2"><i class="bi bi-plus-circle-fill">  Tambahkan Data</i></a>
              <table class="table ">
                  <thead>
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Nama</th>
                      <th scope="col">noHP</th>
                      <th scope="col">Detail</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% let id = 1 %>
                      <% contacts.forEach(e => { %>       
                          <tr>
                            <th scope="row"><%= e.id = id++ %></th>
                            <td><%- e.nama %></td>
                            <td><%- e.noHP %></td>
                            <td><a class="btn btn-success btn-sm" href="/contact/<%- e.id %>" role="button"><i class="bi bi-info-circle-fill"></i> Detail</a></td>
                          </tr>
                      <% }) %>
                  </tbody>
                </table>
              <% } %>
        </div>
    </div>
</div>
