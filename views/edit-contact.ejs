<div class="container">
    <div class="row">
        <div class="col">
            <div class="col-md-6 mt-5">
                <h2>Form Ubah Kontak</h2>
                <% if (typeof result != 'undefined') { %>
                    <div class="alert alert-danger"  role="alert">
                        <ul>
                            <% result.forEach(e => { %>
                             <li><%= e.msg %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                <form method="post"  action="/contact/update">
                    <input type="hidden" name="oldId" value="<%- id.oldId || id.id %>">
                    <input type="hidden" name="oldNama" value="<%- id.oldNama || id.nama %>">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama Lengkap</label>
                        <input type="text" class="form-control" id="nama" name="nama" required value="<%- id.nama %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required value="<%- id.email %>">
                    </div>
                    <div class="mb-3">
                        <label for="noHP" class="form-label">No HP</label>
                        <input type="text" class="form-control" id="noHP" name="noHP" required value="<%- id.noHP %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
                  
                </form>
            </div>
        </div>
    </div>
</div>

